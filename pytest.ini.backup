[tool:pytest]
# Test discovery
testpaths = tests
python_files = test_*.py *_test.py
python_classes = Test*
python_functions = test_*

# Output configuration
addopts =
    -v
    --strict-markers
    --strict-config
    --tb=short
    --durations=10

# Markers for test categorization
markers =
    unit: Unit tests that don't require hardware
    integration: Integration tests using mock instruments
    hardware: Tests that require physical hardware
    power_management: Power supply related tests
    measurement: Measurement and DMM related tests
    signal_generation: Function generator related tests
    slow: Tests that take more than 5 seconds
    parametrize: Parametrized tests with multiple data sets

# Test timeout (prevents hanging tests)
timeout = 300

# Logging configuration
log_cli = true
log_cli_level = INFO
log_cli_format = %(asctime)s [%(levelname)8s] %(name)s: %(message)s
log_cli_date_format = %Y-%m-%d %H:%M:%S

# Warnings configuration
filterwarnings =
    ignore::DeprecationWarning
    ignore::PendingDeprecationWarning